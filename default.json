{
    "extends": [
        "config:base"
    ],
    "labels": [
        "dependencies"
    ],
    "packageRules": [
        {
            "matchPackageNames": [
                "typescript"
            ],
            "matchUpdateTypes": [
                "major",
                "minor"
            ],
            "automerge": false
        },
        {
            "groupName": "typescript patch - automerge",
            "matchPackageNames": [
                "typescript"
            ],
            "matchUpdateTypes": [
                "patch"
            ],
            "automerge": true
        },
        {
            "groupName": "nrwl monorepo - automerge",
            "extends": "monorepo:nrwl",
            "automerge": true,
            "matchUpdateTypes": [
                "patch"
            ]
        },
        {
            "groupName": "nrwl monorepo - manual merge",
            "extends": "monorepo:nrwl",
            "automerge": false,
            "matchUpdateTypes": [
                "major",
                "minor"
            ]
        },
        {
            "groupName": "angular - automerge",
            "extends": [
                "monorepo:angular",
                "monorepo:angular-cli",
                "monorepo:angular-eslint"
            ],
            "matchUpdateTypes": [
                "minor",
                "patch"
            ],
            "automerge": true,
            "automergeType": "pr"
        },
        {
            "groupName": "angular major",
            "extends": [
                "monorepo:angular",
                "monorepo:angular-cli",
                "monorepo:angular-eslint"
            ],
            "matchUpdateTypes": [
                "major"
            ],
            "automerge": false
        },
        {
            "groupName": "ionic native - automerge",
            "extends": [
                "monorepo:ionic-native"
            ],
            "automerge": true
        },
        {
            "groupName": "lint - automerge",
            "matchPackagePatterns": [
                "eslint"
            ],
            "excludePackagePrefixes": ["@angular", "@nx"],
            "automerge": true
        },
        {
            "groupName": "test tools - automerge",
            "matchPackagePatterns": [
                "karma",
                "jasmine",
                "jest",
                "cypress"
            ],
            "excludePackagePrefixes": ["@angular", "@nx", "eslint"],
            "automerge": true
        },
        {
            "groupName": "ionic",
            "matchPackagePrefixes": [
                "@ionic/"
            ],
            "matchUpdateTypes": [
                "major"
            ],
            "automerge": false
        },
        {
            "groupName": "ionic - automerge",
            "matchPackagePrefixes": [
                "@ionic/"
            ],
            "matchUpdateTypes": [
                "minor",
                "patch"
            ],
            "automerge": true
        },
        {
            "groupName": "major - automerge",
            "matchPackagePrefixes": [
                "@capacitor/",
                "@types/",
                "@nxtend/",
                "@sentry/",
                "postcss"
            ],
            "automerge": true
        },
        {
            "groupName": "minor and patch - automerge",
            "automerge": true,
            "matchUpdateTypes": [
                "minor",
                "patch"
            ]
        },
        {
            "groupName": "typescript minor",
            "matchDepNames": [
                "typescript"
            ],
            "matchUpdateTypes": [
                "minor"
            ],
            "automerge": false
        }
    ]
}
